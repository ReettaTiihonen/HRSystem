<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRsystem.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <StackLayout Spacing="10">
            <!--Tehdään kirjautumiseen tarkoitettu sivu-->
                <Label Text="Käyttäjätunnus" HorizontalOptions="CenterAndExpand" FontSize="15" TextColor="Black"/>
                <Entry Placeholder="Username" WidthRequest="300" x:Name="UsernameEntry"/>
                <Label Text="Salasana" HorizontalOptions="CenterAndExpand" FontSize="15" TextColor="Black"/>
                <Entry Placeholder="Password" WidthRequest="300" IsPassword="True" x:Name="PasswordEntry"/>
                <Button Text="Login"
                    x:Name="Login_button"
                    WidthRequest="300"
                    Clicked="Login_button_Clicked"/>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

